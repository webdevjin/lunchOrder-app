
  <h1>Sign In</h1>

<div class="ui green segment">

    <%= form_tag signin_path, method: "post" do %>
      <div id="input">
        <p>
          <label>Email</label>
          <input type="text" name="email"/>
        </p>
        <p>
          <label>Password</label>
          <input type="password" name="password"/>
        </p>
        <p>
          <input type="submit" value="Sign In"/>
        </p>
          <% end %>
      </div>
